<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>اسامی کشور های سارنده محصولات شما</h2>
        <div class="btn-group">
            <a href="/admin/countries/create" class="btn btn-sm btn-primary">ایجاد کشور سازنده</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th> نام کشور</th>
                <th>تاریخ</th>
                <th>تنظیمات</th>
               
            </tr>
            </thead>
            <tbody>
                <% countries.docs.forEach(country =>{ %>
                    <tr>
                        <td><%= country.name %></td>
                        <td><%= country.parent ? country.parent.name : 'دسته اصلی' %></td>
                        <td><%= date(country.createdAt).format('jD jMMMM jYYYY') %></td>
                        <td>
                            <form action="/admin/countries/<%= country._id %>?_method=DELETE" method="post">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                                <div class="btn-group-sm">
                                    <a href="/admin/countries/<%= country._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <%- include(viewPath('layouts/pagination'), {pagination:  countries}) %>
    </div>
    
    
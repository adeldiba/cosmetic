<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>کارایی محصول</h2>
        <div class="btn-group">
            <a href="/admin/performances/create" class="btn btn-sm btn-primary">ایجاد کارایی محصول</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th> نام کارایی محصول</th>
                <th>تاریخ</th>
                <th>تنظیمات</th>
               
            </tr>
            </thead>
            <tbody>
                <% performances.docs.forEach(performance =>{ %>
                    <tr>
                        <td><%= performance.name %></td>
                        <td><%= performance.parent ? performance.parent.name : 'دسته اصلی' %></td>
                        <td><%= date(performance.createdAt).format('jD jMMMM jYYYY') %></td>
                        <td>
                            <form action="/admin/performances/<%= performance._id %>?_method=DELETE" method="post">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                                <div class="btn-group-sm">
                                    <a href="/admin/performances/<%= performance._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <%- include(viewPath('layouts/pagination'), {pagination:  performances}) %>
    </div>
    
    
            <a href="/admin/gullerys_hair/create" class="btn btn-sm btn-primary">ایجاد گالری تصاویر</a>
        </div>
    </div>
    
    <hr>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>محصول مربوطه</th>
                <th>تصویر محصول</th>
                <th>تاریخ</th>
                <th>تنظیمات</th>
            </tr>
            </thead>
            <tbody>
                <% gullerys_hair.docs.forEach(gullery_hair =>{ %>
                    <tr>
                        <td><%= gullery_hair.hair.title %></td>
                        <td><img src="/product_images/<%= gullery_hair.id %>/<%= gullery_hair.image %>" class="img-fluid" width="100px" alt=""></td>

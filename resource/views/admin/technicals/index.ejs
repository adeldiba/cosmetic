<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>محتواهای درخواست متخصص فنی</h2>
    <div class="btn-group">
        <a href="/admin/technicals/create" class="btn btn-sm btn-primary">ایجاد محتوای درخواست متخصص فنی</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th> نام</th>
            <th>تاریخ</th>
            <th>تنظیمات</th>
           
        </tr>
        </thead>
        <tbody>
            <% technicals.forEach(technical =>{ %>
                <tr>
                    <td><%= technical.title %></td>
                    <td><%= date(technical.createdAt).format('jD jMMMM jYYYY') %></td>
                    <td>
                        <form action="/admin/technicals/<%= technical._id %>?_method=DELETE" method="post">
                            <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
                            <input type="hidden" name="_method" value="delete">
                            <input type="hidden" name="_token" value="Dso45XzqoXsAkRC8BBMQ63ZsOFS0c2tELkxR4i3Y">
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/technicals/<%= technical._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                <button type="submit" class="btn btn-danger">حذف</button>
                            </div>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>


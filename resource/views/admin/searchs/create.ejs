<div class="row">
    <div class="col-sm-12 col-md-10">
        <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
            <h2>ایجاد گالری تصاویر</h2>
        </div>
    </div>
    <div class="col-sm-12 col-md-2">
        <div class="text-left">
            <a href="/admin/searchs" type="submit" class="btn btn-info">بازگشت</a>
        </div>
    </div>
</div><!--row-->
    
    <form class="form-horizontal" action="/admin/searchs/create" method="POST">

        <%- include(viewPath('layouts/error-messages')) -%>      
        
        <div class="form-group row">
            <div class="col">
                <label for="cosmetic" class="control-label font-weight-bold font-weight-bold">محصول مربوطه</label>
                <select name="cosmetic" id="cosmetic" class="form-control">
                    <% cosmetics.forEach(cosmetic => { %> 
                        <option value="<%= cosmetic._id %>" <%= String(old('cosmetic')) == String(cosmetic._id) ? 'selected' : '' %> ><%= cosmetic.title %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="skin" class="control-label font-weight-bold font-weight-bold">محصول مربوطه</label>
                <select name="skin" id="skin" class="form-control">
                    <% skins.forEach(skin => { %> 
                        <option value="<%= skin._id %>" <%= String(old('skin')) == String(skin._id) ? 'selected' : '' %> ><%= skin.title %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="title" class="control-label font-weight-bold">عنوان محصول</label>
                <input type="text" class="form-control" name="title" value="<%= old('title') %>" id="title" placeholder="عنوان را وارد کنید">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-danger">ارسال</button>
            </div>
        </div>
    </form>
    <link rel="stylesheet" href="/css/component-chosen.min.css">
<script src="/ckeditor/ckeditor.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>


<script>

    $('.form-control-chosen').chosen({});    
</script>

    <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
        <h2>ایجاد جنسیت</h2>
    </div>
    <form class="form-horizontal" action="/admin/genders/create" method="post">

        <%- include(viewPath('layouts/error-messages')) -%>

        <div class="form-group row">
            <div class="col">
                <label for="name" class="control-label font-weight-bold">نام جنسیت</label>
                <input type="text" class="form-control" name="name" value="<%= old('name') %>" id="name">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="parent" class="control-label font-weight-bold font-weight-bold">دسته مربوطه</label>
                <select name="parent" id="parent" class="form-control">
                        <option value="none">دسته اصلی</option>
                    <% genders.forEach(gen => { %> 
                        <option value="<%= gen.id %>" <%= String(old('genders')) == String(gen.id) ? 'selected' : '' %> ><%= gen.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        
        <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-danger">ارسال</button>
                </div>
            </div>
    </form>
       
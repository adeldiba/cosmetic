<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش برند</h2>
</div>
<form class="form-horizontal" action="/admin/brands/<%= brand._id %>?_method=put" method="post" enctype="multipart/form-data">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="images" class="control-label font-weight-bold">تصویر لگو</label>
            <input type="file" class="form-control" name="images" value="<%= brand.images %>" id="images">
        </div>
    </div>
    <div class="form-group row">
        <% Object.entries(brand.images).forEach(([size , image]) => { %>
            <div class="col-sm-2">
                <label class="control-label">
                    <%= size %>
                    <input type="radio" name="imagesThumb" value="<%= image %>" checked="">
                    <a href="<%= image %>" target="_blank"><img src="<%= image %>" width="100%"></a>
                </label>
            </div>
        <% }) %>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">نام برند</label>
            <input type="text" class="form-control" name="title" value="<%= brand.title %>" id="title">
        </div>
    </div>
    <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-danger">ارسال</button>
            </div>
        </div>
</form>
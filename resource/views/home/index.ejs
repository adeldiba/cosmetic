<section class="new-arrival">
  <!--heading-->
  <div class="arrival-heading">
    <h3>محصولات آرایشی و گریم</h3>
    <div class="line-shope"></div>
  </div>
  <!--product-container-->
  <div class="product-container">
    <!--product-box-1-->
    <% for (let i = 0; i < cosmetics.length; i++) { %>
      <% if (i === 14) { %>
          <%  break; %>
      <%  }  %>
    <div class="product-box hover hover-4">
      <!--img-------->
      <div class="product-img">
         <!--add-cart------->
         <% if(cosmetics[i].discount){ %>
          <span class="discount">
            <%= cosmetics[i].discount %>
          </span>
          <% } %>
         <span class="heart-shop">
          <form id="like" action="/like/<%= cosmetics[i]._id %>" method="POST">
            <button class="details_heart" type="submit">
                <i class="far fa-heart"></i>
                <%= cosmetics[i].likes %>  
            </button>
        </form>
          
        </span>

        <a href="<%= cosmetics[i].path() %>">
          <div class="bg-image hover-overlay hover-zoom  ripple">
          <img src="/uploads/<%= cosmetics[i].file %>" alt="<%= cosmetics[i].title %> ">
         
        </div>
        </a>
      </div>
      <!--details-->
      <div class="product-details">
        <a href="<%= cosmetics[i].path() %>" class="p-name"><h2><%= cosmetics[i].title %></h2></a>
        <% if(cosmetics[i].notprice){ %>
          <span class="p-notprice"><%= cosmetics[i].notprice %></span>
        <% } %>
        <span class="p-price"><%= cosmetics[i].price %> تومان</span>
        <% if(cosmetics[i].typetwo == 'available') { %>
          <div class="btn_cart">
              <a href="/cart/addItem<%= cosmetics[i].path() %>" class="buttton p-shop_cart"><i class="fas fa-shopping-cart"></i></a>
          </div> 
        <% }else{ %>
            <span class="available-text"> محصول موجود بود به من خبر بده</span><br>
            <form id="available" action="/available/<%= cosmetics[i]._id %>" method="POST">
              <div class="ui labeled button" tabindex="0">
              <button class="buttton p-shop_cart" type="submit">
              <i class="far fa-bell"></i>
                  <%= cosmetics[i].available %>                         
              </button>
          </div>
              
          </form> 
          <% } %>
      </div>
    </div>
    <% } %>     
  </div>
</section>

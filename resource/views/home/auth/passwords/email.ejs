
    <section class="login-area mt-5">
        <div class="container">
            <div class="box-area">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 text-right">
                        <h3><i class="fas fa-caret-square-left"></i> ورود کاربر</h3>
                    </div>
                </div><!--row-->
                <div class="border-area"></div>
                <form method="POST" action="/auth/password/email" class="mt-5 text-right">
                    <%- include(viewPath('layouts/error-messages')) -%>
                    <div class="md-form">
                        <input type="email" name="email" id="email" value="<%= old('email') %>" class="form-control">
                        <label for="email">ایمیل</label>
                      </div>
                      
                      <div class="form-group">
                        <%- recaptcha %>
                        </div>
                      <div class="row mt-5">

                        <div class="col-12 col-md-12 text-center">
                            <div class="btn-add ">
                           <button type="submit"><i class="fas fa-play"></i> بازیابی رمز عبور</button> 
                        </div>
                    </div>
                </div><!--row-->
                </form>
                <div class="border-area"></div>
            </div>
        </div>
    </section>
